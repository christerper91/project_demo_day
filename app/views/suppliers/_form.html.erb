<div class="wrapper fadeInDown">
  <div id="formContent">
    <%= form_with(model: @supplier) do |form| %>
      <% if @supplier.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

          <ul>
            <% @supplier.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field mb-3">
        <%= form.label :company_name %>
        <%= form.text_field :company_name, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :company_contact %>
        <%= form.telephone_field :company_contact, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :company_email %>
        <%= form.email_field :company_email, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :company_bank_account %>
        <%= form.select :company_bank_account, ["CIMB", "RHB", "MAYBANK", "PBB"], class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :company_number_account %>
        <%= form.text_field :company_number_account, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.hidden_field :customer_id %>
      </div>

      <div class="field mb-3">
        <%= form.hidden_field :booking_id %>
      </div>

      <div class="actions">
        <%= form.submit "Next", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
